{
    "geometry" :
    {
        "box" : [ [-1,1]  , [-1,1] , [-1,1]  ],
        "bc" : [
            { "type" : "periodic"}, { "type" : "periodic"},{ "type" : "periodic"}
                ]
    },
    "grids" :
    [
        {
            "nCells" : [10,10,10]
        }
    ],
    "stepping" :
    {
        "type" : "RK4",
        "timeStep" : 1e-3,
        "maxTime" : 100
    },
    "laplacianScheme" :
    {
        "type" : "finiteDifference",
        "order" : 2
    },
    "fields":
    [
        {
            "name" : "phi",
            "type" : "real",
            "components" : 1
        }
    ],
    "parallelization" :
    {
        "openMP" : true,
        "MPI" : true
    },
    "variables" : 
    {
        "g" : 1.0
    },
    "model": "op::ddt(phi) = -0.5 * op::lap(phi) + g * phi**3 + 0.5*grid::x**2 + grid::y**2 + grid::z**2",
    "constraints" :
    [
        {
            "type": "normalization",
            "value" : 1.0,
            "norm" : "L2"
        }
    ]
}